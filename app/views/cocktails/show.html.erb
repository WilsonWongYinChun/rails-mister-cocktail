<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'background.jpg' %>);">
  <div class="container show-container">
    <div class="row">
      <div class="card">
        <%= link_to cocktails_path do %>
        <%= fa_icon 'fa-home' %>
        <% end %>
        <h3><%= @cocktail.name %></h3>
        <%= cl_image_tag @cocktail.photo, height: 150, width: 150, crop: :fill, class: "sample" %>
        <ul>
          <% @cocktail.doses.each do |d| %>
            <li>
              <%= d.description %> <%= Ingredient.find(d.ingredient_id).name %>
              <%= link_to dose_path(d), method: :delete do %>
                <%= fa_icon 'fa-trash-alt'%>
              <% end %>
            </li>

          <% end %>
        </ul>
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <%= fa_icon 'fas fa-plus-circle' %>
        <% end %>
        <%= link_to "delete drink", destroy_cocktail_path, method: :delete %>
      </div>
    </div>
  </div>
</div>
